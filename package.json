{
    "name": "hydrogen-css",
    "version": "1.0.3",
    "description": "Hydrogen is a modern, ultra-lightweight & responsive CSS foundation. ",
    "author": "Pim Brouwers",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/pimbrouwers/HydrogenCSS/issues"
    },
    "homepage": "https://github.com/pimbrouwers/HydrogenCSS#readme",
    "dependencies": {},
    "devDependencies": {
        "less": "latest",
        "less-plugin-clean-css": "latest",
        "ncp": "latest",
        "rimraf": "latest"
    },
    "scripts": {
        "clean": "rimraf ./dist/*.css",
        "less-base": "lessc ./src/hydrogen.less ./dist/hydrogen.css",
        "less-gridunits": "lessc ./src/hydrogen.grid-units.less ./dist/hydrogen.grid-units.css",
        "less-base:min": "lessc --clean-css ./src/hydrogen.less ./dist/hydrogen.min.css",
        "less-gridunits:min": "lessc --clean-css ./src/hydrogen.grid-units.less ./dist/hydrogen.grid-units.min.css",
        "less": "npm run less-base & npm run less-gridunits & npm run less-base:min & npm run less-gridunits:min",
        "start": "npm run less"
    },
    "keywords": [
        "css",
        "lightweight css",
        "ultra-lightweight css",
        "pure css",
        "yui pure css",
        "responsive framework"
    ]
}