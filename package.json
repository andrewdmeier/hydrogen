{
    "name": "hydrogen-css",
    "version": "0.0.1",
    "description": "Hydrogen CSS",
    "author": "Pim Brouwers",
    "license": "MIT",
    "dependencies": {
    },
    "devDependencies": {
        "less": "latest",
        "less-plugin-clean-css": "latest",
        "ncp": "latest",
        "rimraf": "latest"
    },
    "scripts": {        
        "clean": "rimraf ./dist/*.css",

        "less": "lessc --clean-css ./src/hydrogen.less ./dist/hydrogen.min.css",
        "less-gridunits": "lessc --clean-css ./src/hydrogen.grid-units.less ./dist/hydrogen.grid-units.min.css",
        
        "start": "npm run clean && npm run less | npm run less-gridunits"
    }
}