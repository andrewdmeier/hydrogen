{
    "name": "hydrogen-css",
    "version": "1.0.0",
    "description": "Hydrogen is a modern, ultra-lightweight & responsive CSS foundation. ",
    "author": "Pim Brouwers",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/pimbrouwers/HydrogenCSS/issues"
    },
    "homepage": "https://github.com/pimbrouwers/HydrogenCSS#readme",
    "dependencies": {
    },
    "devDependencies": {
        "less": "latest",
        "less-plugin-clean-css": "latest",
        "ncp": "latest",
        "rimraf": "latest"
    },
    "scripts": {        
        "clean": "rimraf ./dist/*.css",

        "less": "lessc --clean-css ./src/hydrogen.less ./dist/hydrogen.min.css",
        "less-gridunits": "lessc --clean-css ./src/hydrogen.grid-units.less ./dist/hydrogen.grid-units.min.css",
        
        "start": "npm run clean && npm run less | npm run less-gridunits"
    },
    "keywords": [
        "css",
        "lightweight css",
        "ultra-lightweight css",
        "pure css",
        "yui pure css",
        "responsive framework"
    ]
}